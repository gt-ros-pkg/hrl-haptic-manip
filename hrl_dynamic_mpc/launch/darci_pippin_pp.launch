<launch>
    <arg name="noskin" default="false"/>
    <arg if="$(arg noskin)" name="ctrl_args" value="--darci --t_impulse=24.0 --ignore_skin --noverbose" />
    <arg unless="$(arg noskin)" name="ctrl_args" value="--darci --noverbose" />

    <include file="$(find meka_description)/gtt_viz.launch" />

    <node name="joint_collect_pub" pkg="meka_description"
        type="joint_collect_pub_gtt.py" output='screen' />

    <!--node name="mpc_teleop_rviz" pkg="hrl_haptic_mpc"
          type="mpc_teleop_rviz.py" output="screen"
          args="-r darci -a l " /-->

    <node name="run_controller_pp"
        pkg="hrl_dynamic_mpc"
        type="run_controller_pp.py"
        output="screen"
        args="$(arg ctrl_args)" />

    <!--node name="run_controller_posture"
        pkg="hrl_dynamic_mpc"
        type="run_controller_posture.py"
        output="screen"
        args="$(arg ctrl_args)" /-->

    <node name="waypoint_generator"
        pkg="hrl_dynamic_mpc"
        type="waypoint_generator.py"
        output="screen"
        args="-r darci -a l" />


</launch>

